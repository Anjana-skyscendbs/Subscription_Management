<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form view of Employee -->
    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">view.employee.form</field>
        <field name="model">subscription.employee</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                    <h1><field name="name"/></h1>
                    <group name="grp_main">
                        <field name="user_code" string="Employee Code"/>
                        <field name="gender"/>
                        <field name="salary" string="Salary"/>
                        <field name="qualification"/>
                    </group>
                    <notebook>
                        <page name="pg_sub" string="Subscription Departments">
                            <field name="department_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view of Employee -->
    <record id="view_employee_tree" model="ir.ui.view">
        <field name="name">view.employee.tree</field>
        <field name="model">subscription.employee</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="user_code" string="Employee Code"/>
                <field name="gender"/>
                <field name="qualification"/>
                <field name="department_ids" widget="many2many_tags" optional="hide"/>
            </tree>
        </field>
    </record>



    <!-- Action of Employee -->
    <record id="action_employee" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">subscription.employee</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu of Teacher -->
    <menuitem id="menu_employee" action="action_employee" parent="subscription_managaement.menu_configuration"/>
</odoo>