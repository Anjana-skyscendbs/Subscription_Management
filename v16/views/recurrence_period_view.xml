<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Form view of Recurrence Period -->
    <record id="view_recurrence_form" model="ir.ui.view">
        <field name="name">view.standard.form</field>
        <field name="model">subscription.recurrence</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="duration"/>
                        <field name="unit"/>
                        <field name="start_timestamp"/>
                        <field name="end_timestamp"/>
                        <field name="color" widget="color_picker"/>


                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view of Recurrence Period  -->
    <record id="view_recurrence_tree" model="ir.ui.view">
        <field name="name">view.plan.tree</field>
        <field name="model">subscription.recurrence</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="duration"/>
                <field name="unit"/>
                <field name="start_timestamp"/>
                <field name="end_timestamp"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>


    <!-- Calendar view of Recurrence -->
    <record id="view_recurrence_calendar" model="ir.ui.view">
        <field name="name">view.recurrence.calendar</field>
        <field name="model">subscription.recurrence</field>
        <field name="arch" type="xml">
            <calendar string="Calendar View"
                      date_start="start_timestamp"
                      date_stop="end_timestamp"
                      mode="month"
                      event_open_popup="true">
                <!--                         date_delay=""-->
                <field name="name"/>
                <field name="duration"/>
                <field name="unit"/>
            </calendar>
        </field>

    </record>
     <!-- Kanban view -->
    <record id="view_recurrence_kanban" model="ir.ui.view">
        <field name="name">view.recurrence.kanban</field>
        <field name="model">subscription.recurrence</field>
        <field name="arch" type="xml">
            <kanban string="Recurrence Kanban" class="o_kanban_mobile">
<!--                <field name="id"/>-->
                <field name="color"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_card oe_kanban_color oe_kanban_global_click">
                            <div style="width:30%;float:left;display:inline-block;">
<!--                                <img alt="Avatar"-->
<!--                                     t-att-src="kanban_image('subscription.user','photo',record.id.raw_value)"-->
<!--                                     style="width:100px;height:120px;"/>-->
                            </div>
                            <div style="width:70%;float:right;display:inline-block;">
                                <ul style="list-style-type:none;">
                                    <li>
                                        <b>Name :</b>
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        <b>Code :</b>
                                        <field name="code"/>
                                    </li>
                                    <li>
                                        <b>Duration :</b>
                                        <field name="duration"/>
                                    </li>
                                    <li>
                                        <b>Unit:</b>
                                        <field name="unit"/>
                                    </li>
                                    <li>
                                        <b>Start Date:</b>
                                        <field name="start_timestamp" />
                                    </li>
                                    <li>
                                        <b>End Date</b>
                                        <field name="end_timestamp"/>
                                    </li>

                                </ul>
                            </div>
                            <div class="o_dropdown_kanban o_dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown"
                                   data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <!-- type="open" is used to open the form view in non editable mode -->
                                    <a role="menuitem" type="open" class="dropdown-item">Open</a>
                                    <!-- type="edit" is used to open the form view in editable mdoe -->
                                    <t t-if="widget.editable">
                                        <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    </t>
                                    <!-- type="delete" is used to delete the record -->
                                    <t t-if="widget.deletable">
                                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    </t>
                                    <div role="separator" class="dropdown-divider"/>
                                    <!-- Adding Colorpicker to select the color -->
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>

    <!-- Graph view -->
    <record id="view_recurrence_graph" model="ir.ui.view">
        <field name="name">view.recurrence.graph</field>
        <field name="model">subscription.recurrence</field>
        <field name="arch" type="xml">
            <!--                <graph string="Subscriber Analysis" type="bar" stacked="0">-->
            <!--            <graph string="Subscriber Analysis" type="line">-->
            <graph string="Subscriber Analysis" type="pie">

                <field name="duration" type="measure"/>
                <field name="unit" type="col"/>
                <field name="name" type="row"/>
            </graph>
        </field>

    </record>



     <!-- Pivot view of User-->
    <record id="view_recurrence_pivot" model="ir.ui.view">
        <field name="name">view.recurrence.pivot</field>
        <field name="model">subscription.recurrence</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="start_timestamp" type="col" interval="month"/>
                 <field name="end_timestamp" type="col" interval="quarter"/>
<!--                <field name="gender" type="row"/>-->
                <field name="unit" type="row"/>
                <field name="duration" type="measure"/>
                <!--                <field name="state" type="measure"/>-->
            </pivot>
        </field>
    </record>



    <!-- Action of Plan -->
    <record id="action_recurrence" model="ir.actions.act_window">
        <field name="name">Recurrence Period</field>
        <field name="res_model">subscription.recurrence</field>
        <field name="view_mode">tree,form,calendar,kanban,graph,pivot</field>
    </record>

    <!-- Menu of Plans -->
    <menuitem id="menu_plan" action="action_recurrence" parent="menu_configuration"/>

</odoo>