<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend the sale order line tree view -->
        <record id="view_order_form_inherit_discount_amount" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.discount.amount</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree//field[@name='discount']" position="after">
                    <field name="discount_amount"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/form//field[@name='discount']" position="after">
                    <field name="discount_amount"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>