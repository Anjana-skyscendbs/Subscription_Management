<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend the invoice line tree view -->
        <record id="view_move_form_inherit_discount_amount" model="ir.ui.view">
            <field name="name">account.move.form.inherit.discount.amount</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='discount']" position="after">
                    <field name="discount_amount"/>
                </xpath>
<!--                <xpath expr="//field[@name='line_ids']/tree//field[@name='discount']" position="after">-->
<!--                    <field name="discount_amount"/>-->
<!--                </xpath>-->
            </field>
        </record>
    </data>
</odoo>