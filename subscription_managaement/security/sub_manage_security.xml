<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--  Group for Subscription Admin -->
    <record id="group_subscriber_admin" model="res.groups">
        <field name="name">Subscription Admin</field>
    </record>

    <!--  Group for Subscription User -->
    <record id="group_subscriber_user" model="res.groups">
        <field name="name">Subscription User</field>
    </record>

     <!-- Record rule for User to see its own students -->
    <record id="rule_user_own_subscriber" model="ir.rule">
        <field name="name">User:See own Subscribers</field>
        <field name="model_id" ref="subscription_managaement.model_subscription_user"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="groups" eval="[(ref('subscription_managaement.group_subscriber_user'))]"/>
         <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Record rule for Admin can see all records -->
    <record id="rule_admin_all_subscribers" model="ir.rule">
        <field name="name">Admin:All Subscribers</field>
        <field name="model_id" ref="subscription_managaement.model_subscription_user"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(ref('subscription_managaement.group_subscriber_admin'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>