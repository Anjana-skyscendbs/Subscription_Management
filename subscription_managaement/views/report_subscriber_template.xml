    <template id="report_subscriber">
        <t t-set="company" t-value="env.company"/>
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
            <t t-set="o" t-value="res_company"/>
            <t t-call="web.external_layout">
                <div class="page">
                    <p>This is a sample of an external report.</p>

                        <span t-field="doc.name"/>
                    <br/>
                        <span t-field="doc.age"/>
                    <br/>
                        <span t-field="doc.phone"/>
                    <br/>
                        <span t-field="doc.gender"/>
                    <div class="row">
                                <div class="col-12">
                                    <table class="table table-bordered" style="table-layout: fixed" id="hash_config_table">
                                        <thead style="display: table-row-group">
                                            <tr>
                                                <th><span>Subscription</span></th>
                                                <th>Recurrence</th>
                                                <th>Start Date</th>
                                                <th>End Date</th>
                                                <th>Price</th>
<!--                                                <th>Percentage</th>-->
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="doc.sub_type_ids" t-as="subscription">
                                                <tr>
                                                    <td><span t-field="subscription.sub_type.name"/></td>
                                                    <td><span t-field="subscription.recurrence_id.name"/></td>
                                                    <td><span t-field="subscription.start_date"/></td>
                                                    <td><span t-field="subscription.expire_date"/></td>
                                                    <td><span t-field="subscription.price"/></td>
<!--                                                    <td><span t-field="subscription.perc"/></td>-->
                                                </tr>
                                            </t>
                                            <tr>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
<!--                                                    <td></td>-->
                                            <td>Total  :    <span t-esc="get_total_subscriptions(doc.sub_type_ids)"/></td>
                                                </tr>
                                        </tbody>
                                    </table>
                                </div>
                        </div>
                        <div>Total Price:
                            <span t-esc="get_total_subscriptions(doc.sub_type_ids)"/>
                        </div>
                </div>
            </t>
        </t>
        </t>
    </template>

</odoo>