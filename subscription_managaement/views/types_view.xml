<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Action of Plan Users-->
    <record id="action_type_users" model="ir.actions.act_window">
        <field name="name">Users</field>
        <field name="res_model">subscription.user</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!--   todo  32. Add a smart button on your model which will open the records related to your current record.-->
    <!--   todo 33. Add a smart button which displays the count of records from another model-->
    <!--    related to your current record. When you click on this button it will show you the-->
    <!--    same no of records in a list view.-->
    <!-- Form view of Types -->
    <record id="view_type_form" model="ir.ui.view">
        <field name="name">view.type.form</field>
        <field name="model">subscription.type</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(action_user)d" type="action" string="Users" count='1' icon="fa-pencil-square-o"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button class="oe_stat_button"
                                type="action"
                                name="%(action_type_users)d"
                                context="{'default_type_id':active_id,'search_default_type_id':active_id}"
                                string="Users"
                                icon="fa-users"/>
                    </div>

                    <group>
                        <field name="name"/>
                        <field name="code"/>
<!--                        <field name="color" widget="color_picker"/>-->

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view of Type -->
    <record id="view_type_tree" model="ir.ui.view">
        <field name="name">view.type.tree</field>
        <field name="model">subscription.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
<!--                <field name="color" widget="color_picker"/>-->

            </tree>
        </field>
    </record>


     <!-- Kanban view -->
    <record id="view_type_kanban" model="ir.ui.view">
        <field name="name">view.type.kanban</field>
        <field name="model">subscription.type</field>
        <field name="arch" type="xml">
            <kanban string="Type Kanban" class="o_kanban_mobile">
<!--                <field name="id"/>-->
                <field name="color"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_card oe_kanban_color oe_kanban_global_click">
                            <div style="width:30%;float:left;display:inline-block;">
<!--                                <img alt="Avatar"-->
<!--                                     t-att-src="kanban_image('subscription.user','photo',record.id.raw_value)"-->
<!--                                     style="width:100px;height:120px;"/>-->
                            </div>
                            <div style="width:70%;float:right;display:inline-block;">
                                <ul style="list-style-type:none;">
                                    <li>
                                        <b>Name :</b>
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        <b>Code:</b>
                                        <field name="code"/>
                                    </li>

                                </ul>
                            </div>
                            <div class="o_dropdown_kanban o_dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown"
                                   data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <!-- type="open" is used to open the form view in non editable mode -->
                                    <a role="menuitem" type="open" class="dropdown-item">Open</a>
                                    <!-- type="edit" is used to open the form view in editable mdoe -->
                                    <t t-if="widget.editable">
                                        <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    </t>
                                    <!-- type="delete" is used to delete the record -->
                                    <t t-if="widget.deletable">
                                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    </t>
                                    <div role="separator" class="dropdown-divider"/>
                                    <!-- Adding Colorpicker to select the color -->
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>






    <!-- Action of Type -->
    <record id="action_type" model="ir.actions.act_window">
        <field name="name">Types</field>
        <field name="res_model">subscription.type</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <!-- Menu of Types -->
    <menuitem id="menu_types" action="action_type" parent="menu_configuration"/>


</odoo>