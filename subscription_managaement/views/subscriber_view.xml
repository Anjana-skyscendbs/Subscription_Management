                    <div class="row">
                        <div class="col col-md-6">
                            <group>
                                <field name="age"/>
                                <field name="active"/>
                                <field name="email" widget="email" class="color_red"/>
                                <field name="password" password="*"/>
                                <field name="birthdate"/>
