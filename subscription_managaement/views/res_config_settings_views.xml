<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.subscription</field>
        <field name="model">res.config.settings</field>
<!--        <field name="priority" eval="70"/>-->
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Subscription Management" string="Subscription" data-key="subscription_managaement" groups="subscription_managaement.group_subscriber_admin">
                    <h2>Subscription Management </h2>
                    <div class="row mt16 o_settings_container" name="subscription_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="presence_control_setting" title="Presence of employees">
                            <div class="o_setting_right_pane">
<!--                            <div class="o_setting_left_pane">-->
<!--                                <span class="o_form_label">Access Control</span>-->
<!--                                <div class="content-group" name="hr_presence_options">-->
                                    <div class="d-flex">
                                        <span class="o_form_label">Admin Access</span>
                                        <field name="group_subscriber_admin" class="ml16"/>
<!--                                        <label for="module_hr_attendance" class="o_light_label"/>-->
                                    </div>
                                    <div class="d-flex">
                                        <span class="o_form_label">Employee Access</span>
                                        <field name="group_subscriber_employee" class="ml16"/>
<!--                                        <label for="hr_presence_control_login" class="o_light_label"/>-->
                                    </div>
                                <div class="d-flex">
                                        <span class="o_form_label">User Access</span>
                                        <field name="group_subscriber_user" class="ml16"/>
<!--                                        <label for="hr_presence_control_login" class="o_light_label"/>-->
                                    </div>
<!--                                </div>-->
                            </div>
                        </div>
                    </div>


                </div>
            </xpath>
        </field>
    </record>

    <record id="action_subscription_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'subscription_managaement', 'bin_size': False}</field>
    </record>

    <menuitem id="menu_settings"
              name="Settings"
              sequence="0"
              action="action_subscription_settings"
              parent="menu_configuration"/>

</odoo>
