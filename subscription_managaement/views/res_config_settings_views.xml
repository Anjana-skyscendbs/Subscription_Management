<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.subscription</field>
            <field name="model">res.config.settings</field>
<!--            <field name="priority" eval="40"/>-->
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                      <app data-string="Subscription" string="Subscription Manager" name="subscription_managaement" groups="subscription_managaement.group_subscriber_admin">

                          <block title="Subscription Management Admin ">
                              <setting help="Access right of admin">
                                  <field name="group_subscriber_admin"/>
                              </setting>
                          </block>
                          <block title="Subscription Management Employee ">
                              <setting help="Access right of Employee">
                                  <field name="group_subscriber_employee"/>
                              </setting>
                          </block>
                          <block title="Subscription Management User ">
                              <setting help="Access right of user">
                                  <field name="group_subscriber_user"/>
                              </setting>
                          </block>


                </app>
            </xpath>
        </field>
    </record>

        <record id="action_subscription_settings" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'subscription_managaement', 'bin_size': False}</field>
        </record>

         <menuitem id="menu_settings" name="Settings" sequence="0" action="action_subscription_settings" parent="menu_configuration"/>

    </data>
</odoo>
