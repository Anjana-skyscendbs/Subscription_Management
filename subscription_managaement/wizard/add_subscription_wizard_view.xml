<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_add_subscription_wizard_form" model="ir.ui.view">
        <field name="name">add.subscription.wizard.form</field>
        <field name="model">add.subscription.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Subscriptions">
                <sheet>
                    <group>
                        <field name="user_id" invisible="0"/>
                        <field name="subscription_lines">
                            <tree editable="bottom">
                                <field name="sub_type"/>
                                <field name="recurrence_id"/>
                                <field name="start_date"/>
                                <field name="price"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="action_add_subscriptions" string="Add Subscriptions" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_add_subscription_wizard" model="ir.actions.act_window">
        <field name="name">Add Subscriptions</field>
        <field name="res_model">add.subscription.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>