<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="subscriber_xlsx_report_wiz_view" model="ir.ui.view">
        <field name="name">subscriber.xlsx.report.wiz.view</field>
        <field name="model">subscriber.xlsx.report.wiz</field>
        <field name="arch" type="xml">
            <form string="Subscription XLSX Wizard">
                <group class="oe_title">
                    <field name="user_id"/>
                </group>
                <footer>
                    <button name="button_submit" string="Download XLSX" type="object" class="btn-primary"/>
<!--                    <button name="button_submit" string="Submit" type="object" class="btn-primary"/>-->
                    <button string="Cancel" class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
     <!-- Action of the Wizard -->
    <record id="action_subscriber_xlsx_report_wiz" model="ir.actions.act_window">
        <field name="name">Sub XLSX Wizard</field>
        <field name="res_model">subscriber.xlsx.report.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu of Wizard -->
    <menuitem id="menu_subscriber_xlsx_report_wiz" action="action_subscriber_xlsx_report_wiz" parent="menu_user" sequence="6"/>

</odoo>