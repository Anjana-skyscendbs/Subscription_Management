<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend the employee form view -->
        <record id="hr_employee_view_form_inherit_aadhar_pan" model="ir.ui.view">
            <field name="name">hr.employee.view.form.inherit.aadhar.pan</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='work_phone']" position="after">
                    <field name="aadhar_number"/>
                    <field name="pan_number"/>
                </xpath>
            </field>
        </record>

        <!-- Extend the employee tree view -->
        <record id="hr_employee_view_tree_inherit_aadhar_pan" model="ir.ui.view">
            <field name="name">hr.employee.view.tree.inherit.aadhar.pan</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='work_phone']" position="after">
                    <field name="aadhar_number"/>
                    <field name="pan_number"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>